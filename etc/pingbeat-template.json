{
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": true,
                "norms": {
                    "enabled": false
                }
            },
            "dynamic_templates": [
                {
                    "pingbeat_base": {
                        "mapping": {
                            "doc_values": true,
                            "ignore_above": 1024,
                            "index": "not_analyzed",
                            "type": "{dynamic_type}"
                        },
                        "match": "*"
                    }
                }
            ],
            "properties": {
                "@timestamp": {
                    "type": "date"
                },
                "target_name": {
                    "type": "string",
                    "index": "analyzed",
                    "norms": {
                        "enabled": false
                    },
                    "fields": {
                        "raw": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "target_addr": {
                    "type": "ip"
                },
                "tag": {
                    "type": "string",
                    "norms": {
                        "enabled": false
                    },
                    "index": "not_analyzed",
                    "ignore_above": 256
                },
                "rtt": {
                    "type": "float"
                },
                "loss": {
                    "type": "boolean"
                }
            }
        }
    },
    "template": "pingbeat-*"
}
